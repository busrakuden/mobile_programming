<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <Button
        android:id="@+id/bEkle"
        android:layout_width="328dp"
        android:layout_height="140dp"
        android:background="#469f70"
        android:drawableLeft="@drawable/soru_ekle"
        android:padding="16dp"
        android:text="Soru Ekle"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bListele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <Button
        android:id="@+id/bListele"
        android:layout_width="328dp"
        android:layout_height="140dp"
        android:layout_marginBottom="24dp"
        android:background="#469f70"
        android:drawableLeft="@drawable/soru_listele"
        android:padding="16dp"
        android:text="Soru Listele"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bOlustur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bOlustur"
        android:layout_width="328dp"
        android:layout_height="140dp"
        android:layout_marginBottom="24dp"
        android:background="#469f70"
        android:drawableLeft="@drawable/sinav_olustur"
        android:padding="16dp"
        android:text="Sınav Oluştur"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bAyarlar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAyarlar"
        android:layout_width="328dp"
        android:layout_height="140dp"
        android:layout_marginBottom="30dp"
        android:background="#469f70"
        android:drawableLeft="@drawable/sinav_ayarlari"
        android:padding="16dp"
        android:text="Sınav Ayarları"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>